{
  "name": "GPT TTS",
  "description": "Highlight text and convert it to speech using OpenAI's API.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/chat-bubble_16.png",
    "32": "images/chat-bubble_32.png",
    "48": "images/chat-bubble_48.png",
    "128": "images/chat-bubble_128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/center.js", "content.js"],
      "content_scripts": [],
      "matches": ["<all_urls>"]
    }
  ]
}
